<p id="notice"><%= notice %></p>

<div class="kitchen-listing">
  
  <h1>Kitchen</h1>
  <h2><%= @kitchen.name %></h2>
 
<h3>Recipes in this Kitchen</h3>
<% @kitchen.recipes.each do |recipe| %>
<div class="kitchen-thumbnail">
    <%= link_to image_tag(recipe.photo), recipe %>
 </div>
<% end %>

</div>


<div class="clear">

<%= link_to 'Edit', edit_kitchen_path(@kitchen) %> |
<%= link_to 'View All Kitchens', kitchens_path %> |
<%= link_to 'Destroy', @kitchen, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>