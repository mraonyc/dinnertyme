<p id="notice"><%= notice %></p>

<div class="ingredient-show">
  <h2><%= @ingredient.name %></h2>
  <p><%= @ingredient.amount %> <%= @ingredient.unit %> </p
</div>

<h3>Recipes with this ingredient:</h3>
<% @ingredient.recipes.each do |recipe| %>

<div class="recipe-thumbnail">
    <%= link_to recipe.name, recipe %>
    <%= link_to image_tag(recipe.photo), recipe %>
 </div>
<% end %>


<div class="clear">

<%= link_to 'Edit', edit_ingredient_path(@ingredient) %> |
<%= link_to 'Back', ingredients_path %> |
<%= link_to 'Delete Ingredient', @ingredient, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>