<h1>Recipes</h1>

<% @recipes.each do |recipe| %>
<div class="recipe-thumbnail">
    <h2><%= link_to recipe.name, recipe %></h2>
    <%= link_to image_tag(recipe.photo.thumb), recipe %>
    <p>Rating: <%= recipe.rating %> stars</p>
 </div>
<% end %>

<br />
<div class="clear"><div class="btn btn-primary btn-mini">
<%= link_to 'New Recipe', new_recipe_path %>
</div></div>